<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softchan.agendaescolar">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AE001V2">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AE001V2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.AddSubject"
            android:label="@string/addsubject"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

        <activity android:name=".activities.Alumno"
            android:label="@string/infouser"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

        <activity android:name=".activities.AddUser"
            android:label="@string/addinfouser"
            android:parentActivityName=".activities.Alumno"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

        <activity android:name=".activities.AddNotes"
            android:label="@string/nuevanota"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

        <activity android:name=".activities.AddHomework"
            android:label="Nueva Tarea"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

        <activity android:name=".activities.AddLesson"
            android:label="Nueva Clase"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

        <activity android:name=".activities.LessonsDays"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AE001V2.NoActionBar">
        </activity>

    </application>

</manifest>